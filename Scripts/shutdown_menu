#!/bin/bash

lock() {
    i3lock-fancy -gt "Tipia tu contrase√±a wey!" -- scrot -z
}

while [ -z "$select" ]; do
    select=$(echo -e "Shutdown\nReboot\nSuspend\nLock" | rofi -dmenu -i -p "Select your choice")
done
[ -z "$select" ] && exit 0

case "$select" in
    Lock)
        lock
        ;;
    Suspend)
        systemctl suspend && lock
        ;;
    Reboot)
        systemctl reboot
        ;;
    Shutdown)
        systemctl poweroff
        ;;
esac
